  "license": "MIT",
  "scripts": {
    "dev:server": "ts-node-dev -r tsconfig-paths/register --transpileOnly --inspect --ignore-watch node_modules src/shared/infra/http/server.ts",
    "start": "node dist/shared/infra/http/server.js",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "typeorm:dev": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm": "node ./node_modules/typeorm/cli.js",
    "seed:run:dev": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js seed",
    "seed:run": "node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "test": "jest"
  },
  "engines": {
    "node": "12.16.1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.2.1",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.2.0",
    "typeorm": "^0.2.24",
    "typeorm-seeding": "^1.6.1",
    "uuidv4": "^6.0.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/faker": "^4.1.12",
    "@types/jest": "^25.2.2",
